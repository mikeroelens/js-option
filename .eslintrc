{
    "extends": [
        "airbnb-base",
        "plugin:flowtype/recommended"
    ],
    "env": {
        "jest": true
    },
    "plugins": [
        "flowtype"
    ],
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "no-unused-vars": 0,
        "class-methods-use-this": 0,
        "no-unexpected-multiline": 2,
        "import/prefer-default-export": 0,
        "camelcase": 0,
        "no-use-before-define": 0,
        "radix": [
            2,
            "as-needed"
        ]
    }
}